{
  "latex-workshop.latex.recipes": [
    {
      "name": "compile",
      "tools": [
        "ptex2pdf"
      ]
    }
  ],
  "latex-workshop.latex.tools": [
    {
      "name": "ptex2pdf",
      "command": "sh",
      "args": [
        "%DIR%compile.sh",
        "%DOC%"
      ]
    }
  ],

  "latex-workshop.latex.autoBuild.run": "onFileChange",
  "latex-workshop.docker.enabled": true,
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.outDir": "%DIR%/dist",
  "latex-workshop.message.update.show": false,

  "pasteImage.basePath": "${projectRoot}/img",
  "pasteImage.path": "${projectRoot}/img",
  // "pasteImage.prefix": "\\begin{figure}[H]\n\\centering\n\\includegraphics[width=0.8\\linewidth]{",
  // "pasteImage.suffix": "}\n\\caption{caption}\n\\label{fig:label}\n\\end{figure}",
  "pasteImage.forceUnixStyleSeparator": true,
}
